{
    "name": "futuretek/yii2-migrations",
    "description": "Support for migrations in extensions",
    "keywords": [
        "extension",
        "migrations",
        "yii"
    ],
    "type": "yii2-extension",
    "license": "Apache-2.0",
    "homepage": "http://www.futuretek.cz/",
    "authors": [
        {
            "name": "Lukas Cerny",
            "email": "lukas.cerny@futuretek.cz",
            "homepage": "http://www.futuretek.cz",
            "role": "Developer"
        },
        {
            "name": "Petr Compel",
            "email": "petr.compel@futuretek.cz",
            "homepage": "http://www.futuretek.cz",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/lukascernydis/ext-yii2-migrations/issues",
        "wiki": "https://github.com/lukascernydis/ext-yii2-migrations/wiki",
        "source": "https://github.com/lukascernydis/ext-yii2-migrations"
    },
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "futuretek\\migrations\\": ""
        }
    },
    "extra": {
        "yii-config": {
            "console": {
                "controllerMap": {
                    "migrate": {
                        "class": "futuretek\\migrations\\controllers\\MigrateController",
                        "templateFile": "@vendor/futuretek/yii2-migrations/migrationTemplate.php"
                    }
                }
            }
        }
    }
}
